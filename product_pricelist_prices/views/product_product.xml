<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">ProductNormalFormView</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">   
                <field name="lst_price" position="after">
                    <field name="pricelists" nolabel="1" colspan="2" context="{'product_id': active_id}">
                        <tree string="Sale Prices" name="sale_prices" editable="bottom"  colors="red:product_price_manual">
                            <field name="name" readonly="1"/>
                            <field name="product_price_manual"/>
                            <field name="product_price"/>
                            <button  type="object" class="oi-close"
                                     name="remove_price_manual"
                            />
                        </tree>
                    </field>
                </field>

            </field>
        </record>

    </data>
</odoo>
